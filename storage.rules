rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny rule
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow authenticated users to upload pet images
    match /pet_images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload vaccine records
    match /vaccine_records/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to upload detection media
    match /detection_media/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 